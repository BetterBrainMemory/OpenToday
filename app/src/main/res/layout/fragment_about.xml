<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.OpenToday.About.Root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:text="@string/aboutapp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.OpenToday.About.Title" />

        <TextView
            android:id="@+id/about_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableTopCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/aboutapp_text_version"
                style="@style/Theme.OpenToday.About.RowTitle" />

            <Space
                android:layout_width="5sp"
                android:layout_height="0sp" />

            <TextView
                android:id="@+id/text_version"
                tools:text="0.0.0 (build 0)"
                style="@style/Theme.OpenToday.About.RowValue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/aboutapp_text_package"
                style="@style/Theme.OpenToday.About.RowTitle" />

            <Space
                android:layout_width="5sp"
                android:layout_height="0sp" />

            <TextView
                android:id="@+id/text_package"
                tools:text="ru.fazziclay.opentoday.dev"
                style="@style/Theme.OpenToday.About.RowValue" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/aboutapp_text_license"
                style="@style/Theme.OpenToday.About.RowTitle" />

            <Space
                android:layout_width="5sp"
                android:layout_height="0sp" />

            <TextView
                android:text="GNU GPLv3"
                style="@style/Theme.OpenToday.About.RowValue"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1sp"
            android:orientation="horizontal">

            <TextView
                android:text="@string/aboutapp_text_developer"
                style="@style/Theme.OpenToday.About.RowTitle" />

            <Space
                android:layout_width="5sp"
                android:layout_height="0sp" />

            <TextView
                android:id="@+id/text_developer"
                android:text="FazziCLAY\nhttps://fazziclay.github.io"
                android:paddingBottom="10sp"
                android:autoLink="all"
                style="@style/Theme.OpenToday.About.RowValue"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <Button
            android:id="@+id/sourceCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutapp_text_sourceCode"
            android:layout_gravity="start" />

        <Button
            android:id="@+id/issues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutapp_text_issues"
            android:layout_gravity="start" />

        <Button
            android:id="@+id/licenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_licenses"
            android:layout_gravity="start" />

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutapp_ok"
            android:layout_gravity="end|bottom"/>
    </LinearLayout>
</ScrollView>