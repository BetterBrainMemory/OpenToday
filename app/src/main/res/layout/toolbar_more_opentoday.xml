<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:paddingStart="5sp"
    android:paddingEnd="5sp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/debug"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/debug_toggleDebugOverlayText"
            android:text="Toggle over..Logs"
            android:textAllCaps="false"
            android:backgroundTint="#C400FF"
            android:layout_marginLeft="1sp"
            android:layout_marginRight="1sp"
            android:minHeight="45sp"
            android:minWidth="0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/settings"
            android:text="@string/toolbar_more_opentoday_settings"
            android:backgroundTint="#1455DE"
            android:layout_marginLeft="1sp"
            android:layout_marginRight="1sp"
            android:minHeight="45sp"
            android:minWidth="0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/about"
            android:text="@string/toolbar_more_opentoday_about"
            android:backgroundTint="#1455DE"
            android:layout_marginLeft="1sp"
            android:layout_marginRight="1sp"
            android:minHeight="45sp"
            android:minWidth="0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>